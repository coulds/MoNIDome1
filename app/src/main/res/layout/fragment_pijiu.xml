<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="55dp"
    android:id="@+id/pijiu_layout"
    android:background="@color/bg_public"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.pijiuFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:background="@drawable/project_title_bottom"
            android:id="@+id/SlidingTabLayout_pijiu"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:tl_divider_padding="10dp"
            app:tl_divider_width="1dp"
            app:tl_indicator_corner_radius="10dp"
            app:tl_indicator_margin_left="5dp"
            app:tl_indicator_margin_right="5dp"
            app:tl_indicator_style="BLOCK"
            tl:tl_indicator_color="@color/colorPrimary"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="#a0a0a0"/>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/ViewPager_viewpage_pijiu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



