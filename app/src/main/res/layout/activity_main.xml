<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_drawerlayout"
    tools:context=".Activity.MainActivity">

<!--    <include-->
<!--        android:id="@+id/main"-->
<!--        layout="@layout/bottom" />-->

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_nav">


            <RelativeLayout
                android:id="@+id/coffe_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/coffe_image"
                        android:layout_width="76dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/coffee_img" />

                    <TextView
                        android:id="@+id/coffe_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="咖啡"
                        android:textColor="@drawable/coffee_text" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/yinliao_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/yinliao_image"
                        android:layout_width="75dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/yinliao_img" />

                    <TextView
                        android:id="@+id/yinliao_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="饮料"
                        android:textColor="@drawable/coffee_text" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pijiu_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pijiu_image"
                        android:layout_width="79dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pijiu_img" />

                    <TextView
                        android:id="@+id/pijiu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="啤酒"
                        android:textColor="@drawable/coffee_text" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_image"
                        android:layout_width="83dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/my_img" />

                    <TextView
                        android:id="@+id/my_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的"
                        android:textColor="@drawable/coffee_text" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>

