<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="@color/colorButtonDisable" />
        </shape>
    </item>

    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient android:angle="0" android:endColor="@color/colorButtonPressedEnd" android:startColor="@color/colorButtonPressedStart" />
        </shape>
    </item>

    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient android:angle="0" android:endColor="@color/colorButtonPressedEnd" android:startColor="@color/colorButtonPressedStart" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorButtonEnd" android:startColor="@color/colorButtonStart" />
            <corners android:radius="22dp" />
        </shape>

    </item>
</selector>